---
import type { ProductSpecification } from "../content/types";

type Props = {
  specItem: ProductSpecification;
};

export function formatValue(specItem: ProductSpecification): string {
  switch (specItem.type) {
    case "Simple":
      return specItem.values[0];
    case "Range":
      return specItem.values
        .map((v, index) => `${v} ${specItem.units[index]}`)
        .join(" - ");
    case "MultipleUnits":
      return specItem.values
        .map((v, index) => `${v} ${specItem.units[index]}`)
        .join(" / ");
    default:
      return "";
  }
}

const { specItem } = Astro.props;
---

<span class="d-flex justify-content-between align-items-center border-bottom py-2" >
  <strong>{specItem.name}</strong>
  <span>{formatValue(specItem)}</span>
</span>
