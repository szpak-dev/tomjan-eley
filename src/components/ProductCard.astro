---
const { product } = Astro.props;
---

<div class="col-12 col-md-6 col-lg-4 mb-4">
    <div class="card h-100 shadow-sm border-0">
        <div class="card-img-top-wrapper p-3 text-center bg-light">
            <img
                src={product.data.imageUrl}
                class="card-img-top img-fluid"
                alt={product.data.name}
                style="max-height: 200px; object-fit: contain;"
            />
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title fw-bold">{product.data.name}</h5>
            <h6 class="card-subtitle mb-2 text-muted">
                {product.data.subname}
            </h6>
            <p class="card-text text-truncate">{product.data.lead}</p>
            <a
                href={`/${Astro.params.lang}/products/${product.data.id}`}
                class="btn btn-primary mt-auto stretched-link"
            >
                View Details
            </a>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-5px);
    }
</style>
