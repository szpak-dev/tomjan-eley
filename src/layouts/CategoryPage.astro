---
import ProductCard from "../components/product/ProductCard.astro";
import Section from "../components/ui/Section.astro";
import Slider, { type SliderItem } from "../components/ui/Slider.astro";

import type { Manufacturer } from "../content/manufacturer.repository";
import type { Product } from "../content/product.repository";

export type Props = {
  manufacturer: Manufacturer;
  products: Product[];
  sliderItems: SliderItem[];
};

const { manufacturer, products, sliderItems } = Astro.props;
---

<div class="category-page animate-fade-in">
    <div class="mb-4 d-flex justify-content-center animate-scale-in">
        <Slider
          items={sliderItems}
          indicators={true}
          controls={false}
        />
    </div>
    <Section heading={"Oferta"} divider={true}>
        <div class="row row-cols-1 row-cols-md-4 g-4 animate-stagger">
          {
            products.map((product) => (
              <div class="col">
                <ProductCard product={product} />
              </div>
            ))
          }
        </div>
    </Section>
</div>
