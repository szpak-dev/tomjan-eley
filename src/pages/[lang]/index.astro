---
import { translationRepository } from "../../content";
import Layout from "../../layouts/Layout.astro";
import FrontPage from "../../layouts/FrontPage.astro";

export async function getStaticPaths() {
  const languages = translationRepository.findAvailableLanguages();
  return languages.map(({ code }) => ({ params: { lang: code } }));
}

const { lang } = Astro.params;
  ---

<Layout
  title={"Grey Hunter - Tomasz Jantos"}
  mainClass="d-flex flex-column flex-grow-1 justify-content-center"
  lang={lang}
>
  <FrontPage lang={lang} />
</Layout>
