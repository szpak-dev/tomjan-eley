---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import ProductCard from "../../components/ProductCard.astro";
import { languages } from "../../i18n/ui";

export async function getStaticPaths() {
    const categories = await getCollection("categories");
    const products = await getCollection("products");
    const langs = Object.keys(languages);

    return langs.flatMap((lang) =>
        categories.map((category) => {
            const categoryProducts = products.filter(
                (product) => product.data.category === category.data.id,
            );
            return {
                params: { lang, category: category.data.id },
                props: { category, products: categoryProducts, lang },
            };
        }),
    );
}

const { category, products, lang } = Astro.props;
---

<Layout title={`${category.data.title} - Eley`}>
    <div class="container py-5">
        <div class="row mb-5 align-items-center">
            <div class="col-md-8">
                <h1 class="display-4 fw-bold">{category.data.title}</h1>
                <p class="lead text-muted">
                    Browse our premium selection of {category.data.title} products.
                </p>
            </div>
            <div class="col-md-4 text-md-end">
                <a href={`/${lang}/`} class="btn btn-outline-secondary">
                    &larr; Back to Categories
                </a>
            </div>
        </div>

        <div class="row">
            {
                products.length > 0 ? (
                    products.map((product) => <ProductCard product={product} />)
                ) : (
                    <div class="col-12 text-center py-5">
                        <p class="text-muted">
                            No products found in this category.
                        </p>
                    </div>
                )
            }
        </div>
    </div>
</Layout>
